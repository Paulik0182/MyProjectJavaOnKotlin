<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_counter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="activity_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activity_counter" parent="activity_layout">
        <item name="android:textSize">@dimen/textViewCounter</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="default_text_view">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_view_counter_main</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>

